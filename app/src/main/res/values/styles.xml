<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/filled_button</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginStart">@dimen/normal_margin</item>
        <item name="android:layout_marginEnd">@dimen/uni_margin</item>
        <item name="android:layout_marginBottom">@dimen/very_small_margin</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:textColor">@color/darkTextColor</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:fontFamily">@font/gotham_narrow</item>
    </style>

    <style name="HomeButtons" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:background">@color/teal_500</item>
        <item name="android:layout_marginTop">@dimen/high_margin</item>
        <item name="android:padding">@dimen/normal_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:fontFamily">@font/gillsans</item>
    </style>

    <style name="ProductEditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:fontFamily">@font/gillsans</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:padding">@dimen/uni_padding</item>
        <item name="android:background">@drawable/square_box</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
    </style>

    <style name="ProductTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/gillsans</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

</resources>
